{
	"$schema": "http://json.schemastore.org/tsconfig",

	"compilerOptions": {
		"outDir": "lib",
		"rootDir": "src",

		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
		"inlineSources": true,
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"types": ["heft-jest", "node"],

		"module": "commonjs",
		"target": "es2017",
		"lib": ["es2017"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules", "lib"]
}

		"@vitest/coverage-c8": "^0.30.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.39.0",
		"eslint-config-neon": "^0.1.42",
		"eslint-formatter-pretty": "^5.0.0",
		"prettier": "^2.8.8",
		"tsup": "^6.7.0",
		"typescript": "^5.0.4",
		"vitest": "^0.29.8"
	},
	"engines": {
		"node": ">=16.9.0"
	}
}

{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true
  },
  "include": [
    "*.ts",
    "*.js",
    "*.cjs",
    "*.mjs",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.cjs",
    "src/**/*.mjs",
    "typings/*.d.ts",
    "typings/*.d.mts",
    "typings/*.test-d.ts",
    "bin",
    "scripts",
    "__tests__",
    "__mocks__"
  ],
  "exclude": ["node_modules"]
}
